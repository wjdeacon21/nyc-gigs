    "scrape": "node src/scraper/index.js",
    "scrape:dry": "node src/scraper/index.js --dry-run",
    "test": "node --test tests/*.test.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0",
